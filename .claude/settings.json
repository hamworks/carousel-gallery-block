{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(test(\"\\\\.(js|ts|jsx|tsx)$\"))' | xargs --no-run-if-empty npx prettier --write"
          }
        ]
      }
    ]
  }
}
