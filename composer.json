{
    "name": "hamworks/carousel-gallery-block",
    "description": "WordPress plugin for carousel gallery",
    "type": "wordpress-plugin",
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0"
